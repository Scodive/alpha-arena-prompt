{
  "version": 2,
  "builds": [
    {
      "src": "api/latest_trades.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb"
      }
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/latest_trades", "dest": "/api/latest_trades.py" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "env": {
    "NOF1_BASE_URL": "https://nof1.ai/api",
    "TRADE_DISPLAY_LIMIT": "60"
  }
}
